<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.DoanhThuFragment"
    android:padding="12dp">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/gray_4dd">

            <Button
                android:id="@+id/btn_tungay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/nau_dat"
                android:paddingHorizontal="24dp"
                android:paddingVertical="12dp"
                android:text="Từ ngày"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
            <EditText
                android:contextClickable="false"
                android:textIsSelectable="false"
                android:clickable="false"
                android:focusable="false"
                android:paddingHorizontal="12dp"
                android:id="@+id/edt_tungay"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:background="#00000000"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/blue_A400"/>
        <LinearLayout
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/gray_4dd">

            <Button
                android:id="@+id/btn_denngay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/nau_dat"
                android:paddingHorizontal="24dp"
                android:paddingVertical="12dp"
                android:text="Đến ngày"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
            <EditText
                android:contextClickable="false"
                android:textIsSelectable="false"
                android:clickable="false"
                android:focusable="false"
                android:paddingHorizontal="12dp"
                android:id="@+id/edt_denngay"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:background="#00000000"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/blue_A400"/>

        <Button
            android:id="@+id/btn_doanhthu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="36dp"
            android:background="@color/nau_dat"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"
            android:text="Doanh Thu"
            android:textColor="@color/white"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_doanhthu"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="Doanh thu: "/>
    </LinearLayout>
</FrameLayout>